<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightBlue"
    tools:context=".fragments.BerandaFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ilustrasi_mapel"
                android:layout_marginTop="13dp"
                android:layout_marginStart="15dp"
                android:layout_width="128dp"
                android:scaleType="fitXY"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_height="121dp"/>
            <ImageView
                android:id="@+id/back"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_back"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_nama_mapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlue"/>
            <TextView
                android:id="@+id/detail_nama_guru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_marginTop="9dp"
                android:textColor="@color/colorBlue"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/detail_tahun_ajaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="9dp"
                android:textIsSelectable="true"
                tools:ignore="SmallSp"
                android:textColor="@color/colorBlue"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/detail_top_white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="27.5dp"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/semester"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginStart="17dp"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:checkedChip="@id/chip_semua"
                android:layout_height="wrap_content">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/customChipChoice"
                    android:text="Semua"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_ganjil"
                    android:layout_width="wrap_content"
                    style="@style/customChipChoice"
                    android:layout_height="wrap_content"
                    android:text="Ganjil"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_genap"
                    android:layout_width="wrap_content"
                    style="@style/customChipChoice"
                    android:layout_height="wrap_content"
                    android:text="Genap"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:layout_height="match_parent"
                tools:ignore="UnusedAttribute" />
            <TextView
                android:id="@+id/empty_view"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tidak ada data ditemukan"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>