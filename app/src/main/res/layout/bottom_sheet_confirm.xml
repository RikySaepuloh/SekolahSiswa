<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="73dp"
        android:layout_height="5dp"
        android:background="#EAEAEA"
        android:layout_marginTop="13.5dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="16.5dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Penilaian"/>

    <ImageView
        android:id="@+id/bsp_image"
        android:layout_width="209dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="253dp"/>


    <TextView
        android:id="@+id/bsp_judul_kd"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/bsp_desc_kompetensi"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/bsp_judul_ph"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/bsp_desc_ph"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorLightBlue"
        android:id="@+id/layout_kompetensi"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bsp_judul2_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/bsp_nilai"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:maxLines="1"
                android:textColor="@color/colorBlue"
                android:layout_height="wrap_content"
                />
            <ProgressBar
                android:id="@+id/bsp_progress"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8.5dp"
                android:secondaryProgressTint="#EAEAEA"
                android:max="100"
                android:progressTint="@color/colorBlue"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                tools:ignore="UnusedAttribute" />
            <TextView
                android:id="@+id/bsp_nilai_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_marginTop="9.5dp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>